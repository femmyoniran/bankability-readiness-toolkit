{
    "program_name": "DOE Loan Programs Office - Title XVII",
    "statutory_authority": "Energy Policy Act of 2005, Title XVII, as amended",
    "program_sections": {
        "part_i": {
            "title": "Pre-Application",
            "description": "Initial screening to determine project eligibility and DOE interest",
            "sections": [
                "Project Summary",
                "Eligible Project Category",
                "Preliminary Financial Overview",
                "Credit Subsidy Estimate"
            ]
        },
        "part_ii": {
            "title": "Full Application",
            "description": "Comprehensive application for loan guarantee",
            "sections": [
                "Detailed Project Description",
                "Financial Plan",
                "Environmental Review (NEPA)",
                "Compliance Requirements",
                "Application Fee Schedule"
            ]
        }
    },
    "eligible_categories": [
        {
            "category": "Renewable Energy",
            "technologies": ["solar_pv", "solar_csp", "wind_onshore", "wind_offshore", "geothermal", "hydroelectric"],
            "description": "Projects employing new or significantly improved renewable energy technologies"
        },
        {
            "category": "Energy Efficiency",
            "technologies": ["energy_storage", "battery_storage"],
            "description": "Projects employing new or significantly improved energy efficiency technologies"
        },
        {
            "category": "Advanced Fossil Energy",
            "technologies": ["natural_gas_cc", "coal_igcc"],
            "description": "Projects employing advanced fossil energy technologies including carbon capture"
        },
        {
            "category": "Nuclear Energy",
            "technologies": ["nuclear"],
            "description": "Nuclear energy facilities as defined under Section 1703(b)"
        },
        {
            "category": "Advanced Nuclear",
            "technologies": ["nuclear_smr", "nuclear_advanced"],
            "description": "Advanced nuclear energy projects including small modular reactors"
        },
        {
            "category": "Transmission",
            "technologies": ["transmission", "hvdc"],
            "description": "Electric power transmission infrastructure"
        }
    ],
    "compliance_requirements": [
        {
            "requirement": "Davis-Bacon Act",
            "description": "Prevailing wage requirements for construction workers",
            "applicable": true
        },
        {
            "requirement": "Buy America",
            "description": "Domestic sourcing requirements for iron, steel, and manufactured products",
            "applicable": true
        },
        {
            "requirement": "NEPA",
            "description": "National Environmental Policy Act compliance and environmental review",
            "applicable": true
        },
        {
            "requirement": "Section 106 NHPA",
            "description": "National Historic Preservation Act consultation",
            "applicable": true
        },
        {
            "requirement": "Endangered Species Act",
            "description": "Consultation with US Fish and Wildlife Service",
            "applicable": true
        }
    ],
    "fee_schedule": {
        "first_phase_application_fee": 100000,
        "second_phase_application_fee": {
            "description": "Based on loan amount",
            "rate_bps": 50,
            "minimum": 200000
        },
        "facility_fee": {
            "description": "Charged at financial close",
            "rate_bps": 25
        },
        "maintenance_fee": {
            "description": "Annual fee during loan term",
            "rate_bps": 10
        },
        "credit_subsidy_cost": {
            "description": "Paid by borrower at or before financial close",
            "note": "Determined by OMB credit subsidy model based on project risk profile"
        }
    },
    "minimum_requirements": {
        "min_loan_guarantee": 25000000,
        "max_guarantee_percentage": 80,
        "min_equity_percentage": 20,
        "requires_innovative_technology": true,
        "requires_reasonable_prospect_of_repayment": true,
        "not_available_from_commercial_lenders": true
    }
}
